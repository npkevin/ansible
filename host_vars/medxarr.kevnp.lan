---
nfs_mounts:
  - name: media_library
    export: /mnt/md0/Library
    path: /mnt/library
    server: "{{ nfs_server_host }}"
    fstype: nfs
    state: mounted
    mode: "0755"

  - name: media_downloads
    export: /mnt/md0/Downloads
    path: /mnt/downloads
    server: "{{ nfs_server_host }}"
    fstype: nfs
    state: mounted
    mode: "0755"
