---
nfs_exports:

  - name: media_library
    path: "{{ nfs_export_base }}/Library"
    owner: knguyen
    group: knguyen
    mode: "0775"
    fsid: 0 # virtfs
    clients:
      - host: 192.168.2.0/24
        options: rw,sync,root_squash,no_subtree_check

  - name: media_downloads
    path: "{{ nfs_export_base }}/Downloads"
    owner: knguyen
    group: knguyen
    mode: "0775"
    fsid: 1 # virtfs
    clients:
      - host: 192.168.2.0/24
        options: rw,sync,root_squash,no_subtree_check
